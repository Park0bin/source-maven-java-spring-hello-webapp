pipeline {
 agent { 
  label 'built-in' 
 }
 stages {
  stage('CheckOut') {
   steps {
    git branch: 'main',
    url: 'https://github.com/Park0bin/source-maven-java-spring-hello-webapp.git'
   }
  }
  stage('Build') {
   agent {
    docker { 
     image 'maven:3-openjdk-17' 
     reuseNode true // 동일 워크 스페이스 사용
    }
   }
   steps {
    sh 'mvn clean package'
   }
  }
  stage('ImageBuild') {
   steps {
    sh 'docker image build -t tomcat:hello .'
   }
  }
  stage('ImageTag') {
   steps {
    sh 'docker image tag tomcat:hello youngbin0027/tomcat:v$BUILD_NUMBER'
    sh 'docker image tag tomcat:hello youngbin0027/tomcat:latest'
   }
  }
  stage('ImagePush') {
   steps {
    withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
     sh 'docker image push youngbin0027/tomcat:v$BUILD_NUMBER'
     sh 'docker image push youngbin0027/tomcat:latest'
    }
   }
  }
  stage('Running Container') {
//   agent {
//    docker { image 'docker:dind' }
//   }
   steps {
    sh 'docker -H tcp://192.168.56.104:2375 run -d --name webserver -p 80:8080 youngbin0027/tomcat:latest'
   }
  }
 }
}
